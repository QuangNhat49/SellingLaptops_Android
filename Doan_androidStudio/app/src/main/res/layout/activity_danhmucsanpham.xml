<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    >

    <ImageView
        android:id="@+id/img_danhmuc_sanpham"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_danhmuc_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_danhmuc_sanpham"
        android:layout_centerHorizontal="true"
        android:text="Sản phẩm "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_gia_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_danhmuc_sanpham"
        android:layout_centerHorizontal="true"
        android:text="Giá:"
        android:textSize="25sp" />á
</RelativeLayout>